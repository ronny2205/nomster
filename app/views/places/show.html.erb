<div class="clear"></div>

<% @place.photos.each do |photo| %>
<div class="col-xs-12 col-sm-4">
  <div class="booyah-box">
  	  	<%= image_tag photo.picture, :class => 'img-responsive img-rounded img-cen' %>
  	  <div class="clear"></div>
  	  <br/>	
      <b><i><%= photo.caption %></i></b>  
  </div>
</div>
<% end %>



<div class="clear"></div>

<!-- Modal for comments-->
<div class="modal fade" id="myModal_2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Add a comment</h4>
      </div>

      <%= simple_form_for @comment, :url => place_comments_path(@place) do |f| %>
        <div class="modal-body">
          <%= f.input :message %>
          <br/>
          <%= f.input :rating, :as => :select, :collection => Comment::RATINGS %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= f.submit "Add a Comment", :class => 'btn btn-primary' %>
        </div>
      <% end %>

    </div>
  </div>
</div>

<br/>
<br/>
<div class="col-xs-12 col-xs-offset-0 col-sm-10 col-sm-offset-1">
	<h1 class="pull-left text-orange">Comments</h1>

	<!-- Button trigger modal -->
	<button class="btn btn-primary btn-lg pull-right" data-toggle="modal" data-target="#myModal_2">
	  Add a comment
	</button>
</div>

<div class="clear"></div>

<% @place.comments.each do |comment| %>
  <div class="col-xs-12 col-sm-6">
    <blockquote>
      <% if comment.humanized_rating.present? %>
        <b><%= comment.humanized_rating %></b> -
      <% end %>
      <%= comment.message %>
      <small><%= comment.user.email %></small>
    </blockquote>
  </div>
<% end %>

